{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Terminal Tunnel",
  "version": "0.1.0",
  "identifier": "com.terminaltunnel.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev:client",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Terminal Tunnel",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": true,
        "visible": true,
        "center": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "frameworks": [],
      "exceptionDomain": null,
      "signingIdentity": null,
      "entitlements": null
    },
    "resources": [
      "bin/*"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "endpoints": [
        "https://github.com/kerpopule/TerminalTunnel/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZFQjI1QkRFRjBBRTQ5REEKUldUYVNhN3czbHV5L2tQeUpyV3U3MW5WYlFrQ2dVM2JteGY4eDh3d3doRmJDTUZvTjNuS3c2TE0K"
    }
  }
}
